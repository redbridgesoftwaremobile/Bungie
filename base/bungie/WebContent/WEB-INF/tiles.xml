<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
   "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
   "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
   <definition name="baseLayout" template="/view/baseLayout.jsp">
      <put-attribute name="title"      value="Template" />
      <put-attribute name="header"     value="/view/header.jsp" />
      <put-attribute name="menuLeft"   value="/view/menuLeft.jsp" />     
      <put-attribute name="body"       value="/view/body.jsp" />
      <put-attribute name="navegacion" value="/view/navegacion.jsp" />
      <put-attribute name="footer"     value="/view/footer.jsp" />
   </definition>

   <definition name="registro" extends="baseLayout">     
      <put-attribute name="body"   		 value="/tiles/registro.jsp"/>           
   </definition>

   <definition name="registro-error" extends="baseLayout">     
      <put-attribute name="body"   		 value="/tiles/registro-error.jsp"/>           
   </definition>
   
   <definition name="registro-success" extends="baseLayout">
      <put-attribute name="body"         value="/tiles/registro-success.jsp"/>     
   </definition>
  
</tiles-definitions>